@model RecipeViewModel
@{
    ViewData["Title"] = "Recipes";
}

<table class="table table-hover">
    <thead>
        <tr>
            <td>Recipe Name</td>
            <td>Ingredients</td>
            <td>Meal Type</td>
            <td></td>
        </tr>
    </thead>

    @foreach (var item in Model.Items)
    {
        <tr onclick="location.href = '@(Url.Action("ViewEdit", "Recipe", new {recipeId = item.Id }))'">
            <td>@item.Name</td>
            @{
             var allIngridients = string.Join(", ", item.Ingredients);
            }
            <td>@allIngridients</td>
            <td>@item.MealType</td>
        </tr>
    }
</table>
